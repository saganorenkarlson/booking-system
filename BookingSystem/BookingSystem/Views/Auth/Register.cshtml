@{
    ViewData["Title"] = "Register";
}


@{
    var userEmail = Context.Session.GetString("currentUser");
    var errorMsg = TempData["error"];
}
<head>
    <meta property="og:description" content="@ViewBag.Meta.Description">
    <meta property="og:site_name" content="@ViewBag.Meta.Sitename">
    <meta property="og:article:published_time" content="@ViewBag.Meta.PublicedDate">
    <meta property="og:locale" content="@ViewBag.Meta.Locale">
    <meta property="og:type" content="@ViewBag.Meta.ContentType">

</head>

<div style="display: flex; justify-content: center; align-items: center;">
    <div class="card" style="width: 20rem; padding: 2rem;">
        <h5 class="display-4">Register</h5>



        

        <form asp-action="Register">

            <div class="form-outline mb-4">
                <label class="form-label" for="nameField">Full name</label>
                <input type="text" name="name" id="nameField" class="form-control" aria-label="Full name"/>

            </div>
            <div class="form-outline mb-4">
                <label class="form-label" for="emailField">Email address</label>
                <input name="email" type="email" id="emailField" class="form-control" aria-label="Email address" />

            </div>


            <div class="form-outline mb-4">
                <label class="form-label" for="passwordField">Password</label>
                <input name="password" type="password" id="passwordField" class="form-control" aria-label="Password" />

            </div>
            <div class="form-outline mb-4">
                <label class="form-label" for="passwordConfirmField">Password</label>
                <input name="passwordConfirm" type="password" id="passwordConfirmField" class="form-control" aria-label="Confirm password" />

            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Register</button>

            <!-- Register buttons -->
            <div class="text-center">
                <p>Already have an account? <a href="/Auth/Login">Login</a></p>

            </div>
        </form>

        @if (!String.IsNullOrEmpty(errorMsg?.ToString()))
        {

            <div class="alert alert-danger">

                @TempData["error"]
            </div>

        }
    </div>

